{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "ignorePresets": ["helpers:pinGitHubActionDigests"],
  "mode": "full",
  "prHourlyLimit": 10,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "boto3",
      "matchPackageNames": ["boto3", "boto3-stubs"]
    },
    {
      "groupName": "uv",
      "matchManagers": ["pip_requirements", "pep621"],
      "matchPackageNames": ["uv"]
    },
    {
      "groupName": "uv",
      "matchManagers": ["docker-compose", "dockerfile"],
      "matchPackageNames": ["ghcr.io/astral-sh/uv"]
    }
  ]
}
