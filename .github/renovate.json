{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "ignorePresets": ["helpers:pinGitHubActionDigests"],
  "mode": "full",
  "prHourlyLimit": 10,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "boto3",
      "matchPackageNames": ["boto3", "boto3-stubs"]
    },
    {
      "groupName": "uv",
      "matchPackageNames": ["uv", "astral-sh/uv", "ghcr.io/astral-sh/uv"],
      "separateMajorMinor": false
    }
  ]
}
